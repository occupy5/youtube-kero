{
    "name": "youtube kero",
    "description": "the youtube plugin to find the commments with timestamp quickly",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/images/youtube_kero_16.png",
        "32": "/images/youtube_kero_32.png",
        "48": "/images/youtube_kero_64.png",
        "128": "/images/youtube_kero_128.png"
      }
    },
    "icons": {
      "16": "/images/youtube_kero_16.png",
      "32": "/images/youtube_kero_32.png",
      "48": "/images/youtube_kero_64.png",
      "128": "/images/youtube_kero_128.png"
    },
    "options_page": "options.html",
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["./css/content.css"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources":  ["commentTimestamp.html"],
        "matches": ["https://www.youtube.com/*"]
      }
    ]
  }
  